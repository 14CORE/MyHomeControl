<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context="tk.giesecke.myhomecontrol.MyHomeControl"
	tools:showIn="@layout/activity_my_home_control"
	tools:ignore="ButtonStyle"
	android:id="@+id/view_devdebug"
	android:visibility="visible">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_debug_moni"
			android:id="@+id/bt_debug_moni"
			android:clickable="true"
			android:onClick="onClick"
			android:background="@android:color/holo_orange_light"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_reset_moni"
			android:id="@+id/bt_res_moni"
			android:clickable="true"
			android:onClick="onClick"
			android:background="@color/error_color"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_debug_secf"
			android:id="@+id/bt_debug_secf"
			android:clickable="true"
			android:onClick="onClick"
			android:background="@android:color/holo_orange_light"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_reset_secf"
			android:id="@+id/bt_res_secf"
			android:clickable="true"
			android:onClick="onClick"
			android:background="@color/error_color"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_debug_secb"
			android:id="@+id/bt_debug_secb"
			android:clickable="true"
			android:onClick="onClick"
			android:background="@android:color/holo_orange_light"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_reset_secb"
			android:id="@+id/bt_res_secb"
			android:clickable="true"
			android:onClick="onClick"
			android:background="@color/error_color"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_debug_ac1"
			android:id="@+id/bt_debug_ac1"
			android:clickable="true"
			android:onClick="onClick"
			android:background="@android:color/holo_orange_light"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_reset_ac1"
			android:id="@+id/bt_res_ac1"
			android:clickable="true"
			android:onClick="onClick"
			android:background="@color/error_color"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_debug_ac2"
			android:id="@+id/bt_debug_ac2"
			android:clickable="true"
			android:onClick="onClick"
			android:background="@android:color/holo_orange_light"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_reset_ac2"
			android:id="@+id/bt_res_ac2"
			android:clickable="true"
			android:onClick="onClick"
			android:background="@color/error_color"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center"/>

		<Button
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_clear"
			android:id="@+id/bt_clear"
			android:clickable="true"
			android:onClick="onClick"
			android:layout_weight="1"
			android:background="@android:color/holo_orange_dark"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"
			android:layout_gravity="center"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bt_txt_find"
			android:id="@+id/bt_highlight"
			android:clickable="true"
			android:onClick="onClick"
			android:background="@android:color/holo_orange_dark"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"/>

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/et_highlight"
			android:inputType="textNoSuggestions"
			android:editable="true"
			android:imeOptions="actionSearch"
			android:layout_marginRight="2dp"
			android:layout_marginLeft="2dp"/>

	</LinearLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/sv_debugview"
		android:fadeScrollbars="false">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/tv_sv_debug"/>

	</ScrollView>

</LinearLayout>
